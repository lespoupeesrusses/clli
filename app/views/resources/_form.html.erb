<%= simple_form_for resource do |f| %>
  <div class="row">
    <div class="col-md-8">
      <h1><%= resource %></h1>
      <%= f.input :title %>
      <%= f.input :abstract %>
      <%= f.input :url %>
      <%= f.input :image %>
    </div>
    <div class="col-md-4">
      <%= link_to 'Show', resource, class: 'btn btn-primary' %>
      <%= f.submit 'Save', class: 'btn btn-primary' %>
      <h4>Categories</h4>
      <ul class="list-inline">
        <% Category.all.each do |category| %>
          <li class="list-inline-item">
            <% if category.in? resource.categories %>
              <%= link_to category.title, resource_uncategorize_path(resource, category), method: :post, class: 'btn btn-sm btn-info' %>
            <% else %>
              <%= link_to category.title, resource_categorize_path(resource, category), method: :post, class: 'btn btn-sm btn-secondary' %>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
