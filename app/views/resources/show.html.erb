<% content_for :title, @resource %>

<% content_for :jumbo do %>
  <h1>
    <%= @resource.title %><br/>
    <%= link_to fa_icon(:pencil), edit_resource_path(@resource), class: 'mini-icon' %>
    <%= link_to fa_icon(:trash), @resource, method: :delete, data: { confirm: 'Are you sure?' }, class: 'mini-icon' %>
  </h1>
<% end %>

<div class="row">
  <div class="col-md-4">
    <p><%= @resource.abstract %></p>
  </div>
  <div class="col-md-4">
    <%= image_tag @resource.image, class: 'img-fluid' unless @resource.image.nil? %>
  </div>
  <div class="col-md-4">
    <ul class="list-unstyled">
      <li><%= link_to "#{fa_icon(:link)} #{@resource.url}".html_safe, @resource.url, target: :blank %></li>
      <li><%= fa_icon(:calendar) %> <%= @resource.created_at.strftime("%d/%m/%Y") %></li>
      <li><%= link_to "#{fa_icon(:user)} #{@resource.user.to_s}".html_safe, @resource.user %></li>
    </ul>
    <ul class="list-inline">
      <% @resource.categories.each do |category| %>
        <%= link_to category, category, class: 'btn btn-sm btn-info' %>
      <% end %>
    </ul>
  </div>
</div>
