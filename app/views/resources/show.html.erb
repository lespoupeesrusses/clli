<div class="row">
  <div class="col-md-8">
    <%= image_tag @resource.image, class: 'img-fluid' unless @resource.image.nil? %>
    <h1><%= @resource.title %></h1>
    <p><small><%= link_to @resource.url, @resource.url, target: :blank %></small></p>
    <p><%= @resource.abstract %></p>
  </div>
  <div class="col-md-4">
    <%= link_to 'Edit', edit_resource_path(@resource), class: 'btn btn-primary' %>
    <h4>Categories</h4>
    <ul class="list-inline">
      <% @resource.categories.each do |category| %>
        <%= link_to category, category, class: 'btn btn-sm btn-info' %>
      <% end %>
    </ul>
  </div>
</div>
